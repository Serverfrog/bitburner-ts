{
  "name": "sync-bitburner",
  "version": "1.0.0",
  "description": "Rework of the official implementation of the Bitburner Filesync server",
  "type": "module",
  "bin": "./dist/npx/sync-bitburner.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "bun run build",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prettier:write": "prettier --write --log-level warn .",
    "lint:write": "eslint --fix .",
    "format": "bun typecheck && bun lint:write && bun prettier:write",
    "start": "bun --watch src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrBrahma/sync-bitburner.git"
  },
  "keywords": [
    "bitburner",
    "rfa",
    "remote",
    "sync"
  ],
  "dependencies": {
    "@commander-js/extra-typings": "^11.1.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "globby": "^13.2.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@types/ws": "^8.5.3",
    "eslint-config-gev": "^3.8.0",
    "prettier": "^2.8.8",
    "prettier-config-gev": "^1.1.3",
    "typescript": "^5.3.3"
  },
  "prettier": "prettier-config-gev"
}
